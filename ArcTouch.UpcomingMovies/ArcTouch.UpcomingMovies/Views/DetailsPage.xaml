<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="ArcTouch.UpcomingMovies.Views.DetailsPage">
    <ContentPage.Content>

        <Grid>
            <Image Source="{Binding UpcomingMovie.PosterImage}" Aspect="AspectFill" />

            <BoxView Color="Black"
                     WidthRequest="300"
                     HeightRequest="200"
                     VerticalOptions="Center" 
                     HorizontalOptions="Center" 
                     Opacity="0.7" />

            <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="35,10,35,10" >
                <Label Text="{Binding UpcomingMovie.Name, StringFormat='Name: {0}'}" FontSize="7" TextColor="White"/>
                <Label Text="{Binding UpcomingMovie.ReleaseDate, StringFormat='Release Date: {0}'}" FontSize="7" TextColor="White"/>
                <Label Text="{Binding UpcomingMovie.Generes, StringFormat='Generes: {0}'}" FontSize="7" TextColor="White" />
                <Label Text="{Binding UpcomingMovie.Overview, StringFormat='Overview: {0}'}" FontSize="7" TextColor="White"/>
            </StackLayout>
        </Grid>
        
    </ContentPage.Content>
</ContentPage>