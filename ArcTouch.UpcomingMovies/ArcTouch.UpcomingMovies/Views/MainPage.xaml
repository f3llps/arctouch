<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArcTouch.UpcomingMovies.Views.MainPage"
             Title="{Binding Title}">


    <ContentPage.Content>
        <StackLayout>
            
        <!--Header-->
        <StackLayout  BackgroundColor="#081C24" Padding="10" VerticalOptions="StartAndExpand">
            <Image x:Name="TMDbLogo"  Aspect="AspectFit"  />
            <Label 
                   Text="Upcoming Movies" 
                   HorizontalTextAlignment="Center" 
                   HorizontalOptions="Center" 
                   HeightRequest ="20"
                   FontSize="Small"
                   FontAttributes="Bold"
                   TextColor="White"/>
        </StackLayout>

        <!--Footer-->
        <StackLayout Padding="5" VerticalOptions="EndAndExpand">
                <Image x:Name="ArcTouchLogo" Aspect="AspectFit"  />
        </StackLayout>
    
        </StackLayout>

    </ContentPage.Content>

</ContentPage>